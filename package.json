{
  "name": "primariga",
  "version": "1.0.0",
  "description": "Scopri nuove letture alla cieca leggendo la prima riga di romanzi",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "npx ts-node --project tsconfig.node.json scripts/test-supabase-connection.ts",
    "seed:db": "npx ts-node --project tsconfig.node.json scripts/seed-database.ts",
    "types:generate": "node scripts/generate-supabase-types.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.2.0",
    "@sentry/react-native": "~7.2.0",
    "@supabase/supabase-js": "^2.49.0",
    "@tanstack/react-query": "^5.76.0",
    "expo": "~54.0.0",
    "expo-constants": "~18.0.10",
    "expo-image": "~3.0.10",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.14",
    "expo-status-bar": "~3.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.54.0",
    "react-native": "0.81.5",
    "react-native-paper": "^5.14.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets-core": "^1.6.2",
    "zod": "^3.24.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.10.0",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.1.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2"
  },
  "private": true
